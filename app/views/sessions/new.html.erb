<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= render 'shared/content_title', title: "Log in" %>
    <div class="well">
      <%= form_tag '/login' do %>
        <div class="form-group">
          <%= label_tag :email %>
          <%= email_field_tag :email, nil, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, class: 'form-control' %>
        </div>
        <div class="actions form-group">
          <%= submit_tag 'Log in', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
